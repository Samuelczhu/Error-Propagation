#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
        id: Menu
    InfoScreen:
        id: Infor
    OneVar:
        id: one
    Answer1:
        id: ans1
    TwoVar1:
        id: two1
    TwoVar2:
        id: two2
    Answer2:
        id: ans2
    ThreeVar1:
        id: three1
    ThreeVar2:
        id: three2
    Answer3:
        id: ans3
    FourVar1:
        id: four1
    FourVar2:
        id: four2
    FourVar3:
        id: four3
    Answer4:
        id: ans4
    FiveVar1:
        id: five1
    FiveVar2:
        id: five2
    FiveVar3:
        id: five3
    Answer5:
        id: ans5
    ErrorScreen:
        id: error


<Title@Label>:
    color: 0,1,0,1
    font_size: root.width*0.1
    size: self.texture_size
    center: root.width * 0.5, root.height * 0.87

<Info@Label>:
    color: 1,1,0,1
    size_hint: 0.3,0.05

<MovableLabel@Scatter>:
    do_rotate: False
    do_scale: False
    do_translation_y: False
    size_hint: None, None
    size: myLabel.size
    Info:
        id: myLabel
        text: ''
        size: self.texture_size
        color: 0, 0.8, 0, 1

<AnswerLabel@Label>:
    color: 0.7,0,0.8,1
    size_hint: 0.2, 0.05

<Input@TextInput>:
    multiline: False
    size_hint: 0.5, 0.05

<button@Button>:
    color: 0,1,0,1
    size_hint: 0.3,0.1

<MenuButton@Button>:
    text: 'Menu'
    on_release: app.root.current = 'Menu'
    color: 0,0.5,1,1
    size_hint: 0.2, 0.1
    pos_hint: {'x': 0.78, 'y': 0.02}

<ContinueButton@Button>:
    text: 'Continue'
    color: 0,0.5,0.5,1
    size_hint: 0.25,0.1
    pos_hint: {'x':0.37,'y':0.02}

<BackButton@ContinueButton>:
    text: 'Back'

<ClearButton@Button>:
    text: 'Clear'
    color: 0.8,0.5,0,1
    size_hint: 0.2, 0.1
    pos_hint: {'x':0.02,'y': 0.02}

<CalculateButton@Button>:
    text: 'Calculate'
    color: 0,0.8,1,1
    size_hint: 0.25, 0.1



<MainScreen>:
    name: 'Menu'
    FloatLayout:
        Title:
            text: 'Error Propagation'
        Info:
            text: 'Please enter Equation: '
            font_size: root.width*0.06
            pos_hint: {'x':0.35,'y':0.7}
        Input:
            id: equation
            size_hint: 0.8,0.07
            font_size: self.height * 0.6
            pos_hint: {'x':0.1,'y':0.57}
        button:
            text: 'Information'
            color: 0,1,1,1
            pos_hint: {'x':0.35,'y':0.37}
            on_release: app.root.current = 'info'
        button:
            color: 1,0.7,0,1
            text: 'Start'
            pos_hint: {'x':0.35,'y':0.2}
            on_release: root.start()


 
<InfoScreen>:
    name: 'info'
    FloatLayout:
        Title:
            text: 'Information'
        Label:
            text: 'Please enter equation with lowercase letter\n\nPlease enter + - * / ^ abs()\n\nPlease enter sin(), cos(), sec(), arcsin(), etc.\n\nPlease enter sqrt(), ln(), log(), log(x,base)\n\nPlease enter math.pi for pi, math.e for e'
            font_size: root.width*0.045
            color: 1,0.8,0,1
            pos_hint: {'x':0,'y':0.1}
        Label:
            text: 'Equation should contains:\n\n    At least one variable\n\n   At most five variables'
            font_size: root.width*0.045
            color: 0,0.5,1,1
            pos_hint: {'x':0,'y':-0.2}
        button:
            text: 'Menu'
            pos_hint: {'x':0.35,'y':0.05}
            on_release: app.root.current = 'Menu'


<OneVar>:
    name: 'OneVar'
    FloatLayout:
        Title:
            text: 'One Variable'
        Info:
            id: dfdaLabel
            text: 'Derivative df/da = '
            pos_hint: {'x':0.05,'y':0.7}
        Input:
            id: dfda
            pos_hint: {'x': 0.4, 'y': 0.7}
        Info:
            id: aLabel
            text: 'a = '
            pos_hint: {'x': 0.17, 'y': 0.6}
        Input:
            id: a
            pos_hint: {'x': 0.4, 'y': 0.6}
        Info:
            id: EaLabel
            text: 'Error a = '
            pos_hint: {'x': 0.13, 'y': 0.5}
        Input:
            id: Ea
            pos_hint: {'x': 0.4, 'y': 0.5}
        ClearButton:
            on_release: root.clear()
        CalculateButton:
            pos_hint: {'x': 0.37, 'y': 0.3}
            on_release: root.calculate()
        MenuButton:
            on_release: root.clear()
